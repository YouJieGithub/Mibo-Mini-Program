/* Component/loginPage/loginPage.wxss */
.model{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: #333333;
  opacity: .5;
}
.loginPage{
  position: fixed;
  left: 50%;
  top: 50%;
  width: 600rpx;
  height: 400rpx;
  z-index: 200;
  background: #ffffff;
  margin: -200rpx 0 0 -300rpx;
  box-shadow:  0rpx 0rpx 10rpx 4rpx #333333; 
  background:linear-gradient(-90deg,#DCDCDC,#F0FFFF);
}
.loginPage view:nth-of-type(1){
  display: flex;
  flex-direction: column;
  align-items: center;
}
.loginPage view:nth-of-type(1) text:first-child{
  margin-top: 24rpx;
  font-size:40rpx;
  color: 	#000000;
  font-weight: bolder;
}
.loginPage view:nth-of-type(1) text:last-child{
  font-size: 20rpx;
  color: #000000;
  opacity: .7
}
.loginPage view:nth-of-type(2){
  margin: 24rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.loginPage view:nth-of-type(2) input{
  width: 400rpx;
  height: 60rpx;
  border: 1rpx solid #333333;
}
.phoneplaceholderclass{
  font-size: 24rpx;
}
.seocdplaceholderclass{
  font-size: 24rpx;
}
.loginPage view:nth-of-type(3){
  margin: 24rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.loginPage view:nth-of-type(3) input{
   width: 200rpx;
  height: 60rpx;
  border: 1rpx solid #333333;
}
.loginPage view:nth-of-type(3) button{
  font-size: 24rpx;
  color:  #000000;
  border: none;
  background: #4ea5f2;
}
.loginPage view:nth-of-type(4) button{
  margin: 0 24rpx;
  font-size: 28rpx;
  color:  #000000;
  border: none;
  background: #4ea5f2;
}