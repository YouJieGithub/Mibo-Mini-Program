<!--Component/loginPage/loginPage.wxml-->
<!-- 短信验证登录 -->
<view class='page' catchtouchmove="move">
  <view class='model' bindtap='closemodal' id="1"></view>
  <view class='loginPage'>
    <view><text>Hi,你还未登录</text><text>无需注册，输入手机号即可登录</text></view>
    <view>手机号：<input type='number' maxlength='11' bindinput="phone" placeholder="请输入手机号" placeholder-class="phoneplaceholderclass"></input></view>
    <view>验证码：<input type='text' name="seod" bindinput="seocd" placeholder="请输入验证码" placeholder-class="seocdplaceholderclass"></input><button bindtap="fromsubmit" plain="ture">{{userphong.show_get_code}}</button></view>
    <view><button bindtap="register" plain="ture">登录</button></view>
  </view>
</view>
